        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Midterm"
        mc:Ignorable="d"
        Title="exit_page" Height="250" Width="600">
    <Grid>
        <Label Content="Do you Really Want to Exit?" HorizontalAlignment="Left" Margin="47,38,0,0" VerticalAlignment="Top" Height="38" Width="293" FontSize="20"/>
        <Button x:Name="exitbtn" Content="Exit" HorizontalAlignment="Left" Margin="313,149,0,0" VerticalAlignment="Top" Height="43" Width="106" FontSize="18" Click="exitbtn_Click"/>
        <Button x:Name="cancelbtn" Content="Cancel" HorizontalAlignment="Left" Margin="455,149,0,0" VerticalAlignment="Top" Height="43" Width="106" FontSize="18" Click="cancelbtn_Click"/>

    </Grid>
</Window>
